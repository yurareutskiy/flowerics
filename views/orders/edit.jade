extends ../layout

block content
  section.content
    .box-body
      form(action='/admin/orders/#{order.id}/edit', method='post', enctype='application/x-www-form-urlencoded')

        .form-group
          label Статус
          select.form-control(name='status')
            - statuses = ['pending', 'delivered', 'canceled', 'ready']
            each status in statuses
              option(selected=order.status == status value='#{status}')= status

        input(type='hidden',value='PUT',name='_method')

        .actions
          button.btn.btn-primary(type="submit") Сохранить
