extends ../layout

block content
  .container
    h1 Букеты

    .table-responsive
      table.table
        thead
          tr
            th Название
            th Описание
            th Цена
            th Изображение
            th Управление
            th &nbsp;
        tbody
          for bouquet in bouquets
            tr
              td
                a(href='bouquets/#{bouquet._id}')
                  = bouquet.name
              td= bouquet.description
              td= bouquet.price
              td
                img(src= '/uploads/#{bouquet.image}')
              td
                a(href='bouquets/#{bouquet._id}/edit')
                  button.btn.btn-warning Изменить
              td
                form(action='/admin/bouquets/#{bouquet._id}', method='post', enctype='application/x-www-form-urlencoded')
                  input(type='hidden',value='DELETE',name='_method')
                  button.btn.btn-danger(type='submit') Удалить
