extends ../layout

block content
  .container
    form(method='post', action='/admin/flowers', enctype='multipart/form-data')

      .form-group
        label Название
        input.form-control(type='text', placeholder='Название', name='name')

      .form-group
        label Цена
        input.form-control(type='number', name='price')

      .form-group
        label Описание
        input.form-control(type='text', placeholder='Описание', name='description')

      .form-group
        label Изображение
        input(type='file', name='image')

      .actions
        button.btn.btn-primary(type='submit') Добавить
